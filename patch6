diff --git a/backend/app/core/security.py b/backend/app/core/security.py
new file mode 100644
index 0000000000000000000000000000000000000000..5d8894f7d309c734dfae4bf68a73f15046a98ebc
--- /dev/null
+++ b/backend/app/core/security.py
@@ -0,0 +1,20 @@
+
+from datetime import datetime, timedelta
+from jose import jwt, JWTError
+from fastapi import Depends, HTTPException
+from fastapi.security import HTTPBearer, HTTPAuthorizationCredentials
+from app.core.config import settings
+
+security = HTTPBearer()
+ALGORITHM = "HS256"
+
+def create_access_token(user_id: str):
+    payload = {"sub": user_id, "exp": datetime.utcnow() + timedelta(hours=24)}
+    return jwt.encode(payload, settings.JWT_SECRET, algorithm=ALGORITHM)
+
+def get_current_user(creds: HTTPAuthorizationCredentials = Depends(security)):
+    try:
+        payload = jwt.decode(creds.credentials, settings.JWT_SECRET, algorithms=[ALGORITHM])
+        return payload["sub"]
+    except JWTError:
+        raise HTTPException(401, "Invalid token")
